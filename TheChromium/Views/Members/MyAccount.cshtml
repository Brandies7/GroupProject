
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>Account</h2>
@*Regular Membership*@
<form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
    <input type="hidden" name="cmd" value="_s-xclick">
    <input type="hidden" name="hosted_button_id" value="PAAYT2ZPMPPUL">
    <table>
        <tr><td><input type="hidden" name="on0" value="Membership Options">Membership Options</td></tr>
        <tr>
            <td style="color:black">
                <select name="os0">
                    <option value="5%off Membership">5%off Membership : $10.00 USD - monthly</option>
                    <option value="10% off Membership">10% off Membership : $15.00 USD - monthly</option>
                    <option value="15% off Membership">15% off Membership : $210.00 USD - yearly</option>
                </select>
            </td>
        </tr>
    </table>
    <input type="hidden" name="currency_code" value="USD">
    <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_subscribe_SM.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
    <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>
