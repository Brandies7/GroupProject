@model TheChromium.Models.Events

@{
    ViewBag.Title = "Map View";
}

<h2>Map View</h2>


<style>
    #map {
        height: 400px;
        width: 100%;
    }
</style>

<div class="row">
    <script src="https://maps.googleapis.com/maps/api/js?&libraries=places&key=AIzaSyAStekB9zs5XGPWoVR6LJ91ezJBo68yL6M&callback=initMap"
            async defer></script>

    <div id="map"></div>
    <script>

        function initMap() {
            var EventLocation = @Html.DisplayFor(model => model.Location);
            var MapOptions = {
                zoom: 17,
                center: EventLocation
            }
          var map = new google.maps.Map(document.getElementById('map'), MapOptions);
          var marker = new google.maps.Marker({
              position: EventLocation,
              map: map
          });
        }

    </script>
</div>